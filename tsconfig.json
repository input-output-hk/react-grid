{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "types": [
      "react"
    ],
    "target": "ESNext",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
